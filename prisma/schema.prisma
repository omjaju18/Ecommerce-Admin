// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

// Define the "Store" model for the database

model Store {
  // Unique identifier for each store, using a UUID as the default value.
  id        String    @id @default(uuid())
  
  // The name of the store.
  name      String  

   billboards      Billboard[] @relation("StoreToBillboard")

  // The user associated with the store.
  userId    String  
  
  // Timestamp for when the store was created, with the current timestamp as the default.
  createdAt DateTime   @default(now())
  
  // Timestamp for when the store was last updated, automatically updated.
  updatedAt DateTime   @updatedAt
}


model Billboard {
  id          String @id @default(uuid())
  storeId     String
  store       Store @relation("StoreToBillboard", fields: [storeId], references: [id])
  label       String
  images      Image[] 
  imageUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([storeId])
}

model Image {
  id        String  @id @default(uuid())
  billboardId String
  billboard   Billboard @relation(fields: [billboardId], references: [id], onDelete: Cascade)
  url       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([billboardId])
}