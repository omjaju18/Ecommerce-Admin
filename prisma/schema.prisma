// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

// Define the "Store" model for the database.

model Store {
  // Unique identifier for each store, using a UUID as the default value.
  id        String    @id @default(uuid())
  
  // The name of the store.
  name      String  
  
  // The user associated with the store.
  userId    String  
  
  // Timestamp for when the store was created, with the current timestamp as the default.
  createdAt DateTime   @default(now())
  
  // Timestamp for when the store was last updated, automatically updated.
  updatedAt DateTime   @updatedAt
}
